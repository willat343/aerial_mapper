<launch>

    # Rviz
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find aerial_mapper_demos)/rviz/phantom3_ortho_colored.rviz"/>

    # Orthomosaic generation via incremental grid
    <arg name="flagfile"
        default="$(find aerial_mapper_demos)/flags/3-phantom3-factory-ortho-backward-incremental-colored.ff"/>
    <node pkg="aerial_mapper_demos" type="aerial_mapper_demos_ortho_backward_grid_incremental"
        name="demo_ortho_grid_incremental" output="screen" args="--flagfile=$(arg flagfile)"/>

</launch> 
